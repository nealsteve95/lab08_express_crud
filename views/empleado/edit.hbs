<!DOCTYPE html>
<html>
    <head>
        <title>Editar Empleado</title>
    </head>
    <body>
        <div class="container">
            <h3><a href="/empleados">Lista de Empleados</a></h3>
            <h1>Editar Producto</h1>
            <form action="/empleados/update/{{ empleados._id }}" method="post">
                <table>
                    <tbody>
                        <tr>
                            <td>Nombre</td>
                            <td><input type="text" name="nombre" value="{{ empleados.nombre }}" /></td>
                        </tr>
                        <tr>
                            <td>Apellido</td>
                            <td><input type="text" name="apellido" value="{{ empleados.apellido }}" /></td>
                        </tr>
                        <tr>
                            <td>Correo</td>
                            <td><input type="text" name="correo" value="{{ empleados.correo }}" /></td>
                        </tr>
                        <tr>
                            <td>Fecha de Nacimiento</td>
                            <td><input type="text" name="fecha_nacimiento" value="{{ empleados.fecha_nacimiento }}" /></td>
                        </tr>
                        <tr>
                            <td>Sexo</td>
                            <td><input type="text" name="sexo" value="{{ empleados.sexo }}" /></td>
                        </tr>
                        <tr>
                            <td>Edad</td>
                            <td><input type="text" name="edad" value="{{ empleados.edad }}" /></td>
                        </tr>
                        <tr>
                            <td colspan="2"><button type="submit">Update</button></td>
                        </tr>
                    </tbody>
                </table>
            </form>
        </div>
    </body>
</html>
